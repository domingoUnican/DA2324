#lang racket

; Puntos
(define (make-point x y) (cons x y))
(define (x-point p) (car p))
(define (y-point p) (cdr p))

; Funci√≥n dada para mostrar los puntos
(define (print-point p)
  (newline)
  (display "(")
  (display (x-point p))
  (display ",")
  (display (y-point p))
  (display ")"))

; Defino el inicio y fin del segmento 
(define (make-segment x y) (cons x y))
(define (start-segment s) (car s))
(define (end-segment s) (cdr s))



; Sumo las coordenadas x e y de cada punto por separado y divido entre dos
(define (midpoint-segment s)
  (make-point (/ (+ (x-point (start-segment s)) (x-point (end-segment s))) 2)
              (/ (+ (y-point (start-segment s)) (y-point (end-segment s))) 2)))



; Prueba
; No se comprueban errores por lo que los puntos deben ser dos coordenadas en formato decimal
(define pinicio (make-point 0 3))
(define pfin (make-point 5 6))
(define segment1 (make-point pinicio pfin))
(print-point pinicio)
(print-point pfin)
(print-point (midpoint-segment segment1))